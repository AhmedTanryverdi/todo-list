{
	"compilerOptions": {
		"target": "es5",
		"module": "es6",
		"strict": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"allowJs": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"include": ["src/**/*"]
}
